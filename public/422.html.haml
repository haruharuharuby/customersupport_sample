    .container
      .row
        .col-xs-12.col-md-6.col-md-offset-3.sign-in
          .brand.text-center
            = image_tag "adm-logo-large.png"
          .title
            %h1= t("errors.422")
          .explain
            %h2= t("errors.422_description")
