      .col-lg-10.col-md-9
        = f.text_field :contact_phone, class: "form-control", placeholder: t("order.example_phone")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :contact_email, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
