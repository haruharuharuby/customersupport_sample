        .col-lg-10.col-md-9
          = f.text_field :billing_responder_name, class: "form-control", placeholder: t("order.example_responder")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_responder_kana, class: "label label-info fixed-width"
        .col-lg-10.col-md-9
          = f.text_field :billing_responder_kana, class: "form-control", placeholder: t("order.example_responder_kana")

  .billing_name.contents
    .contents.title
      %h4= t("order.billing_name_option")
      %small= t("order.billing_name_explain")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :billing_name_option, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.select :billing_name_option, {t("order.billing_name_option_item1") => 0, t("order.billing_name_option_item2") => 1, t("order.billing_name_option_item3") => 2}, {}, value: @order.billing_name_option, class: "form-control"

  .nursery.contents
    .contents.title
      %h4= t("order.nursery_condition")
    .nursery.contents
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :nursery_condition, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.select :nursery_condition, {t("order.operating") => 0, t("order.preparing_new") => 1, t("order.preparing_change") => 2}, {}, value: @order.nursery_condition, class: "form-control"
      #open_or_change_corp
        .row.sub-contents
          .col-lg-2.col-md-3
            = f.label :nursery_will_change_at, class: "label label-info fixed-width required"
          .col-lg-10.col-md-9
            = f.text_field :nursery_will_change_at, class: "form-control", placeholder: t("order.example_nursery_will_change_at")
        .row.sub-contents
          .col-lg-12
            %small= t("order.shipping_explain")
          .col-lg-2.col-md-3
            = f.label :shipping_option, class: "label label-info fixed-width required"
          .col-lg-10.col-md-9
            = f.select :shipping_option, {t("order.ship_to_shipping") => 0, t("order.ship_to_billing") => 1, t("order.ship_to_nursery") => 2}, {}, value: @order.shipping_option, class: "form-control"
  .contact.contents
    .contents.title
      %h4= t("order.contact")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :contact_name, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :contact_name, class: "form-control", placeholder: t("order.example_name")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :contact_kana, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :contact_kana, class: "form-control", placeholder: t("order.example_responder_kana")
