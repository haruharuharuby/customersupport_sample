  .request.contents
    .sub-contents
      %h5= t("order.request")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :request, class: "label label-info fixed-width"
        .col-lg-10.col-md-9
          = f.text_area :request, class: "form-control"
  .attention.contents
    %p
      %small= t("order.attention1")
    %p
      %small= t("order.attention2")
    %p
      %small= t("order.attention3")
    %p
      %small= t("order.attention4")
  .other.contents
    = render partial: "form/privacy"
  .actions
    = f.submit t("action.confirm"), data:{ disable_with: t("action.sending") }, class: "btn btn-success", id:"confirm_button"
