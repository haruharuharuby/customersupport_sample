= form_for @order do |f|
  = render partial: "application/model_alert", locals: {object: @order}
  = f.hidden_field :confirming
  .contents
    %h5=t("order.required_item")
  -# now invisible
  .order_products
    = f.fields_for :order_details do |op|
      = op.hidden_field :product_id
      = op.hidden_field :num
      = op.hidden_field :charge
      = op.hidden_field :charge_tax_in
    = f.hidden_field :sum
    = f.hidden_field :sum_tax_in
  .nursery.contents
    .contents.title
      %h3= t("order.question_nursery")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :org_nursery_name, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :org_nursery_name, class: "form-control", placeholder: t("order.example_nursery_organization_name")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :org_nursery_kana, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :org_nursery_kana, class: "form-control", placeholder: t("order.example_nursery_organization_name_kana")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_name, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :nursery_name, class: "form-control", placeholder: t("order.example_name")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_kana, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.text_field :nursery_kana, class: "form-control", placeholder: t("order.example_name_kana")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_postal, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_postal, class: "form-control", placeholder: t("order.example_postal_code")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_addr1, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_addr1, class: "form-control", placeholder: t("order.example_address1")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_addr2, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_addr2, class: "form-control", placeholder: t("order.example_address2")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_phone, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_phone, class: "form-control", placeholder: t("order.example_phone")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_fax, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_fax, class: "form-control", placeholder: t("order.example_phone")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_email, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_email, class: "form-control", placeholder: t("order.example_email")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_responder_name, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_responder_name, class: "form-control", placeholder: t("order.example_responder")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :nursery_responder_kana, class: "label label-info fixed-width"
      .col-lg-10.col-md-9
        = f.text_field :nursery_responder_kana, class: "form-control", placeholder: t("order.example_responder_kana")
    .contents
  .cash_back.contents
    .contents.title
      %h4= t("order.has_experience")
    %small= t("order.cash_back_condition")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :is_first_order, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.select :is_first_order, {t("order.first_time") => true, t("order.experienced") => false }, {}, value: @order.is_first_order, class: "form-control"
    #experience.contents
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :same_org_other_nursery_name, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :same_org_other_nursery_name, class: "form-control", placeholder: t("order.example_experienced_nursery_name")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :same_org_other_nursery_phone, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :same_org_other_nursery_phone, class: "form-control", placeholder: t("order.example_phone")
      %small= t("order.cash_back_applying")

  .shipping.contents
    .contents.title
      %h4= t("order.shipping")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :is_ship_to_nursery, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.select :is_ship_to_nursery, {t("order.ship_to_nursery") => true, t("order.other_place") => "false"}, {}, value: @order.is_ship_to_nursery, class: "form-control"
    #shipping.contents
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_name, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :shipping_name, class: "form-control", placeholder: t("order.example_name")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_kana, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :shipping_kana, class: "form-control", placeholder: t("order.example_name_kana")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_postal, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :shipping_postal, class: "form-control", placeholder: t("order.example_postal_code")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_addr1, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :shipping_addr1, class: "form-control", placeholder: t("order.example_address1")
      .row.sub-contents
