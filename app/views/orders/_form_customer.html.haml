      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_responder_name, class: "label label-info fixed-width"
        .col-lg-10.col-md-9
          = f.text_field :shipping_responder_name, class: "form-control", placeholder: t("order.example_responder")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :shipping_responder_kana, class: "label label-info fixed-width"
        .col-lg-10.col-md-9
          = f.text_field :shipping_responder_kana, class: "form-control", placeholder: t("order.example_responder_kana")

  .billing.contents
    .contents.title
      %h4= t("order.billing_option")
    .row.sub-contents
      .col-lg-2.col-md-3
        = f.label :billing_ship_to, class: "label label-info fixed-width required"
      .col-lg-10.col-md-9
        = f.select :billing_ship_to, {t("order.ship_to_nursery") => 0, t("order.ship_to_shipping") => 1, t("order.other_place") => 2}, {}, value: @order.billing_ship_to, class: "form-control"
    #billing.contents
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_shipping_name, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :billing_shipping_name, class: "form-control", placeholder: t("order.example_name")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_shipping_kana, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :billing_shipping_kana, class: "form-control", placeholder: t("order.example_name_kana")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_shipping_postal, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :billing_shipping_postal, class: "form-control", placeholder: t("order.example_postal_code")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_shipping_addr1, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :billing_shipping_addr1, class: "form-control", placeholder: t("order.example_address1")
      .row.sub-contents
        .col-lg-2.col-md-3
          = f.label :billing_shipping_addr2, class: "label label-info fixed-width required"
        .col-lg-10.col-md-9
          = f.text_field :billing_shipping_addr2, class: "form-control", placeholder: t("order.example_address2")
