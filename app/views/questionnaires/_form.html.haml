      %h3.panel-title= f.label :item7, t("activerecord.attributes.questionnaire.item7")
    .panel-body
      = f.text_area :item7_text, hide_label: true


  .actions
    = f.submit t("action.send"), data:{ disable_with: t("action.sending") }, class: "btn btn-success"
