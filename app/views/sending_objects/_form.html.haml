= form_for @sending_object do |f|
  - if @sending_object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sending_object.errors.count, "error")} prohibited this sending_object from being saved:"
      %ul
        - @sending_object.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :nursery_id
    = f.number_field :nursery_id
  .field
    = f.label :sended_at
    = f.date_select :sended_at
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
