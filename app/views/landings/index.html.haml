.container
  .row
    .col-xs-12.col-md-6.col-md-offset-3.sign-in
      .brand.text-center
        = image_tag "adm-logo-large.png"
      #login-by-csp
        = form_for :csp, {url: "csps/sign_in"} do |f|
          .form-group
            = f.label (t "landing.number")
            = f.text_field :number, class: "form-control"
          .form-group
            = f.label (t "landing.password")
            = f.password_field :password, class: "form-control"
          .form-group
            = f.submit (t "landing.sign_in"), class: "btn btn-primary"
