= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :support_begin
    = f.datetime_select :support_begin
  .field
    = f.label :support_end
    = f.datetime_select :support_end
  .field
    = f.label :version
    = f.text_field :version
  .actions
    = f.submit 'Save'
